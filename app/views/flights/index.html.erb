<h3>Flights</h3>

<% @flights.each do |flight| %>
<section id='flight-details-<%= flight.id %>'>
  <p><b>Flight # <%= flight.number %></b></p>
  <p>Airline: <%= flight.airline.name %></p>
  <p>Passengers: <% flight.passengers.each do |passenger| %></p>
    <p><%= passenger.name %></p>
    <%= button_to "Remove #{passenger.name}", flight_passenger_flight_path(flight, passenger), method: :delete, local: true %>
    <% end %>
</section>
<% end %>
